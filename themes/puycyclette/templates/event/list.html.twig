{% extends 'base.html.twig' %}

{% block content %}
    {% include 'partials/_banner.html.twig' with {
        content: {
            title: 'Nos √©v√©nements'
        }
    } %}

    <section class="pt-20 pb-10 lg:pt-[120px] lg:pb-20 dark:bg-dark">
        <div class="container mx-auto px-4">
            <div class="flex flex-wrap -mx-4">
                {% for event in events %}
                    <div class="w-full px-4 md:w-1/2 lg:w-1/3">
                        <div class="mb-10 wow fadeInUp group" data-wow-delay=".1s">
                            <div class="mb-8 overflow-hidden rounded-[5px]">
                                <a href="index.html" class="block">
                                    {# Ici tu peux afficher une image si ton entit√© Event en a une #}
                                    <img
                                        src="assets/images/events/event-placeholder.jpg"
                                        alt="{{ event.title }}"
                                        class="w-full transition group-hover:rotate-6 group-hover:scale-125"
                                    />
                                </a>
                            </div>
                            <div>
                                <span
                                    class="inline-block px-4 py-0.5 mb-6 text-xs font-medium leading-loose text-center text-white rounded-[5px] bg-primary"
                                >
                                    {{ event.startDate|date('d/m/Y') }} ‚Äì {{ event.endDate|date('d/m/Y') }}
                                </span>
                                <h3>
                                    <a
                                        href="{{ path('front_event_show', {id: event.id}) }}"
                                        class="inline-block mb-4 text-xl font-semibold text-dark dark:text-white hover:text-primary dark:hover:text-primary sm:text-2xl lg:text-xl xl:text-2xl"
                                    >
                                        {{ event.title }}
                                    </a>
                                </h3>
                                <p class="max-w-[370px] text-base text-body-color dark:text-dark-6">
                                    {% if event.excerptDescription is defined  %}
                                        {{ event.excerptDescription|raw }}
                                    {% else %}
                                        Aucun descriptif disponible.
                                    {% endif %}
                                </p>
                                {% if event.location %}
                                    <p class="mt-2 text-sm text-gray-500 dark:text-dark-6">
                                        üìç {{ event.location }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="w-full text-center">
                        <p>Aucun √©v√©nement pour le moment.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
