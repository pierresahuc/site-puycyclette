{% extends 'base.html.twig' %}

{% block content %}
    {% include 'partials/_banner.html.twig' with {
        content: {
            title: (event.title)
        }
    } %}

    <section class="bg-gray-1 pb-8 pt-20 dark:bg-dark-2 lg:pb-[70px] lg:pt-[120px]" id="event">
        <div class="container px-4 mx-auto">
            <div class="wow fadeInUp" data-wow-delay=".2s">
                <div class="flex flex-wrap items-center -mx-4">

                    {# Texte √† gauche #}
                    <div class="w-full px-4 lg:w-1/2">
                        <div class="mb-12 max-w-[540px] lg:mb-0">
                            <span class="inline-block px-4 py-1 mb-6 text-xs font-medium leading-loose text-center text-white rounded-[5px] bg-primary">
                                {{ event.startDate|date('d/m/Y H:i') }} ‚Äì {{ event.endDate|date('d/m/Y H:i') }}
                            </span>

                            <h1 class="mb-5 text-3xl font-bold leading-tight text-dark dark:text-white sm:text-[40px] sm:leading-[1.2]">
                                {{ event.title }}
                            </h1>

                            {% if event.location %}
                                <p class="mb-4 text-sm text-gray-600 dark:text-dark-6">
                                    üìç {{ event.location }}
                                </p>
                            {% endif %}

                            <div class="prose dark:prose-invert max-w-none mb-10">
                                {% if event.description %}
                                    {{ event.description|raw }}
                                {% else %}
                                    <p>Aucune description disponible pour cet √©v√©nement.</p>
                                {% endif %}
                            </div>

                            {# Boutons d'inscription #}
                            <div class="mb-6">
                                {% if app.user %}
                                    {% set registration = event.eventRegistrations|filter(r => r.user == app.user)|first %}

                                    {% if registration %}
                                        <p class="mb-4 text-green-600 font-semibold">
                                            ‚úÖ Vous √™tes inscrit √† cet √©v√©nement (statut : {{ registration.status }})
                                        </p>
                                        <a href="{{ path('event_unregister', {id: event.id}) }}"
                                           class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-red-600 rounded-md shadow hover:bg-red-700">
                                            Se d√©sinscrire
                                        </a>
                                    {% else %}
                                        <a href="{{ path('event_register', {id: event.id}) }}"
                                           class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary rounded-md shadow hover:bg-blue-dark">
                                            S'inscrire √† l'√©v√©nement
                                        </a>
                                    {% endif %}
                                {% else %}
                                    <p class="mb-4 text-gray-600">
                                        <a href="{{ path('app_login') }}" class="text-primary underline">
                                            Connectez-vous
                                        </a> pour vous inscrire √† cet √©v√©nement.
                                    </p>
                                {% endif %}
                            </div>


                            <a href="{{ path('front_event_list') }}"
                               class="inline-flex items-center justify-center py-3 text-base font-medium text-center text-white border rounded-md border-primary bg-primary px-7 hover:border-blue-dark hover:bg-blue-dark">
                                ‚Üê Retour √† la liste
                            </a>
                        </div>
                    </div>

                    {# Image √† droite #}
                    <div class="w-full px-4 lg:w-1/2">
                        <div class="flex flex-wrap -mx-2 sm:-mx-4 lg:-mx-2 xl:-mx-4">
                            <div class="w-full px-2 sm:px-4 lg:px-2 xl:px-4">
                                <div class="mb-4 sm:mb-8 sm:h-[400px] md:h-[540px] lg:h-[400px] xl:h-[500px]">
                                    <img
                                        src="{{ asset('build/website/assets/images/blog/blog-01.jpg') }}"
                                        alt="{{ event.title }}"
                                        class="object-cover object-center w-full h-full rounded-[5px] shadow-lg transition hover:scale-105"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>


{% endblock %}
