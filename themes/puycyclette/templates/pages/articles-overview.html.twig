{% extends "base.html.twig" %}

{% block content %}
    {% include 'partials/_banner.html.twig' %}

    <section class="pt-20 pb-10 lg:pt-[120px] lg:pb-20 dark:bg-dark">
        <div class="container mx-auto px-4">
            <div class="flex flex-wrap -mx-4">
                {% for article in content.articles %}
                    <div class="w-full px-4 md:w-1/2 lg:w-1/3">
                        <div class="mb-10 wow fadeInUp group" data-wow-delay=".1s">
                            <div class="mb-8 overflow-hidden rounded-[5px]">
                                <a href="{{ sulu_content_path(article.routePath) }}" class="block">
                                    {# TODO: remplacer par la vraie image de l’article si dispo #}
                                    <img
                                        src="assets/images/blog/blog-01.jpg"
                                        alt="{{ article.title }}"
                                        class="w-full transition group-hover:rotate-6 group-hover:scale-125"
                                    />
                                </a>
                            </div>
                            <div>
                                <span
                                    class="inline-block px-4 py-0.5 mb-6 text-xs font-medium leading-loose text-center text-white rounded-[5px] bg-primary"
                                >
                                    {# Si ton entité Article contient une date, tu peux formatter : #}
                                    {% if article.published is defined %}
                                        {{ article.published|date('M d, Y') }}
                                    {% else %}
                                        {{ "now"|date('M d, Y') }}
                                    {% endif %}
                                </span>
                                <h3>
                                    <a
                                        href="{{ sulu_content_path(article.routePath) }}"
                                        class="inline-block mb-4 text-xl font-semibold text-dark dark:text-white hover:text-primary dark:hover:text-primary sm:text-2xl lg:text-xl xl:text-2xl"
                                    >
                                        {{ article.title }}
                                    </a>
                                </h3>
                                <p class="max-w-[370px] text-base text-body-color dark:text-dark-6">
                                    {% if article.excerptDescription is defined %}
                                        {{ article.excerptDescription|raw }}
                                    {% else %}
                                        Aucune description disponible.
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="w-full text-center">
                        <p>Aucun article disponible.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

