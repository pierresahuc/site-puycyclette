<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="de">Startseite</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <property name="article" type="text_editor">
            <meta>
                <title lang="en">Article</title>
                <title lang="de">Artikel</title>
            </meta>
        </property>

        <!-- Image de une -->
        <property name="hero_image" type="media_selection" >
            <meta>
                <title lang="en">Hero Image</title>
                <title lang="fr">Image de une</title>
            </meta>
            <params>
                <param name="types" value="image"/>
                <param name="max" value="1"/>
            </params>
        </property>

        <!-- Bloc Nos actions -->
        <block name="actions" default-type="action_item" maxOccurs="4">
            <meta>
                <title lang="en">Our actions</title>
                <title lang="fr">Nos actions</title>
            </meta>
            <types>
                <type name="action_item">
                    <meta>
                        <title lang="en">Action</title>
                        <title lang="fr">Action</title>
                    </meta>
                    <properties>
                        <property name="title" type="text_line">
                            <meta>
                                <title lang="en">Title</title>
                                <title lang="fr">Titre</title>
                            </meta>
                        </property>
                        <property name="text" type="text_area">
                            <meta>
                                <title lang="en">Text</title>
                                <title lang="fr">Texte</title>
                            </meta>
                        </property>
                        <property name="link" type="single_page_selection">
                            <meta>
                                <title lang="en">Link</title>
                                <title lang="fr">Lien</title>
                            </meta>
                        </property>
                    </properties>
                </type>
            </types>
        </block>

        <!-- Section Qui sommes-nous -->
        <block name="about" default-type="about_section" minOccurs="0" maxOccurs="1">
            <meta>
                <title lang="en">About us</title>
                <title lang="fr">Qui sommes-nous</title>
            </meta>
            <types>
                <type name="about_section">
                    <meta>
                        <title lang="en">About Section</title>
                        <title lang="fr">Bloc Qui sommes-nous</title>
                    </meta>
                    <properties>
                        <property name="title" type="text_line">
                            <meta>
                                <title lang="en">Title</title>
                                <title lang="fr">Titre</title>
                            </meta>
                        </property>
                        <property name="text" type="text_area">
                            <meta>
                                <title lang="en">Text</title>
                                <title lang="fr">Texte</title>
                            </meta>
                        </property>
                        <property name="image" type="single_media_selection">
                            <meta>
                                <title lang="en">Image</title>
                                <title lang="fr">Image</title>
                            </meta>
                            <params>
                                <param name="types" value="image"/>
                                <param name="max" value="1"/>
                            </params>
                        </property>
                        <property name="link" type="single_page_selection">
                            <meta>
                                <title lang="en">Link</title>
                                <title lang="fr">Lien</title>
                            </meta>
                        </property>
                    </properties>
                </type>
            </types>
        </block>

        <!-- Section Actus : 3 items (titre + texte + lien + image) -->
        <block name="news" default-type="news_item" minOccurs="0" maxOccurs="3">
            <meta>
                <title lang="en">News</title>
                <title lang="fr">Actualités</title>
            </meta>
            <types>
                <type name="news_item">
                    <meta>
                        <title lang="en">News Item</title>
                        <title lang="fr">Élément d’actualité</title>
                    </meta>
                    <properties>
                        <property name="title" type="text_line">
                            <meta>
                                <title lang="en">Title</title>
                                <title lang="fr">Titre</title>
                            </meta>
                        </property>
                        <property name="text" type="text_area">
                            <meta>
                                <title lang="en">Text</title>
                                <title lang="fr">Texte</title>
                            </meta>
                        </property>
                        <property name="link" type="page_selection">
                            <meta>
                                <title lang="en">Link</title>
                                <title lang="fr">Lien</title>
                            </meta>
                            <params>
                                <param name="max" value="1"/>
                            </params>
                        </property>
                        <property name="image" type="single_media_selection">
                            <meta>
                                <title lang="en">Image</title>
                                <title lang="fr">Image</title>
                            </meta>
                            <params>
                                <param name="types" value="image"/>
                                <param name="max" value="1"/>
                            </params>
                        </property>
                    </properties>
                </type>
            </types>
        </block>
    </properties>
</template>
